<section class="contact_section layout_padding">
    <div class="container">
      <div class="heading_container">
        <h2>
          SIGN <span>UP</span>
        </h2>
      </div>
      <div class="row">
        <div class="col-md-15">
          <div class="form_container contact-form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form_container contact-form">
    
    <%= f.email_field :email,placeholder:"email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form_container contact-form">
    <%= f.password_field :password,placeholder:"password", autocomplete: "new-password" %>
  </div>

  <div class="form_container contact-form">
    
    <%= f.password_field :password_confirmation,placeholder: "password_confirmation", autocomplete: "new-password" %>
  </div>

  <div class="btn_box">
                <button>
                  signup
                </button>
              </div>
<% end %>
</div>
</div>
</div>
</div>
</div>
</section>

<%= render "devise/shared/links" %>
